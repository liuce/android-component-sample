<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.lightips.sample.android.component.SpNativeActivity">


    <EditText
        android:hint="@string/sp_edit_hint"
        android:layout_width="@dimen/activity_sp_item_width"
        android:layout_height="@dimen/activity_sp_item_height"
        android:id="@+id/editText"
        android:layout_row="0"
        android:layout_column="0" />

    <Button
        android:layout_width="@dimen/activity_sp_item_width"
        android:layout_height="@dimen/activity_sp_item_height"
        android:text="Submit"
        android:id="@+id/btnInput"
        android:layout_row="0"
        android:layout_column="1" />


    <TextView
        android:layout_width="@dimen/activity_sp_item_width"
        android:layout_height="@dimen/activity_sp_item_height"
        android:id="@+id/textView"
        android:layout_row="1"
        android:layout_column="0" />
    <Button
        android:layout_width="@dimen/activity_sp_item_width"
        android:layout_height="@dimen/activity_sp_item_height"
        android:text="Get Value"
        android:id="@+id/btnGet"
        android:layout_row="1"
        android:layout_column="1" />


</GridLayout>
